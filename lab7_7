#include <iostream>
using namespace std;
class Factorial {
public:
	int n;
	int factorial();
 
};
int main() {
	Factorial factorial;
	cout << "Enter n: ";
	cin >> factorial.n;
	int fact = factorial.factorial();
	cout << "Factorial of a number "<< factorial.n << " = "<< fact;
}
int Factorial::factorial()
{
	int fact = 1;
	for (int i = 1; i <= this->n; i++) {
		fact *= i;
	}
	return fact;
}v
